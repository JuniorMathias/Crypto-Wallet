<p style="color: green"><%= notice %></p>

<h1>Moedas</h1>

<table>
  <thead>
    <tr>
      <th >Description</th>
      <th >Acronym</th>
      <th >Image</th>
      <th colspan="3"></th>
    </tr>  
  </thead>

  <tbody> 
    <% @coins.each do |coin| %>
    <tr>
      <td> <%= coin.description %> </td>
      <td> <%= coin.acronym %> </td>
      <td> <%= image_tag coin.url, size: "25x25" %> </td>
      <td> <%= link_to 'Show', coin %> </td>
      <td> <%= link_to 'Edit', edit_coin_path(coin) %> </td>
      <td><%= link_to t('links.destroy'), coin, method: :delete, data: { confirm: t('messages.confirm') } %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('new.coin'), new_coin_path %>